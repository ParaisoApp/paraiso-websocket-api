<configuration>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex</pattern>
        </encoder>
    </appender>

    <!-- Keep INFO logs for Ktor application (so you see "Application started") -->
    <logger name="ktor.application" level="INFO"/>

    <!-- Suppress MongoDB driver DEBUG logs -->
    <logger name="org.mongodb.driver" level="WARN"/>

    <!-- Suppress Netty internal DEBUG logs -->
    <logger name="io.netty" level="WARN"/>

    <!-- Allow klogger logs -->
    <logger name="io.github.oshai.kotlinlogging" level="DEBUG"/>

    <!-- Root logger at INFO level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>